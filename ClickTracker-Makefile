CFLAGS = -framework Cocoa -framework Foundation
TARGET = ClickTracker

# Build the ClickTracker app
build:
	@echo "ðŸ”¨ Building ClickTracker app..."
	$(CC) -o $(TARGET) $(TARGET).m $(CFLAGS)
	@echo "âœ… ClickTracker build complete!"

# Run the ClickTracker app
run: build
	@echo "ðŸš€ Starting ClickTracker app..."
	./$(TARGET)

# Clean build artifacts
clean:
	@echo "ðŸ§¹ Cleaning..."
